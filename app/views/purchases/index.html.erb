<h1>Listing purchases</h1>

<table>
  <tr>
    <th>Product</th>
    <th>First name</th>
    <th>Last name</th>
    <th>Email</th>
    <th>Contact no</th>
    <th>Address1</th>
    <th>City</th>
    <th>State</th>
    <th>Country</th>
    <th>Zipcode</th>
    <th>Card type</th>
    <th>Card expires on</th>
    <th>Ip address</th>
    <th>Purchased at</th>
    <th>Total cost</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @purchases.each do |purchase| %>
  <tr>
    <td><%= purchase.product_id %></td>
    <td><%= purchase.first_name %></td>
    <td><%= purchase.last_name %></td>
    <td><%= purchase.email %></td>
    <td><%= purchase.contact_no %></td>
    <td><%= purchase.address1 %></td>
    <td><%= purchase.city %></td>
    <td><%= purchase.state %></td>
    <td><%= purchase.country %></td>
    <td><%= purchase.zipcode %></td>
    <td><%= purchase.card_type %></td>
    <td><%= purchase.card_expires_on %></td>
    <td><%= purchase.ip_address %></td>
    <td><%= purchase.purchased_at %></td>
    <td><%= purchase.total_cost %></td>
    <td><%= link_to 'Show', purchase %></td>
    <td><%= link_to 'Edit', edit_purchase_path(purchase) %></td>
    <td><%= link_to 'Destroy', purchase, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

